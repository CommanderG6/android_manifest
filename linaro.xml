<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Repositories -->

  <remote name="robh" fetch="http://github.com/robherring" />
  <remote name="collabora" fetch="ssh://git@gitlab.collabora.com/zodiac/" />

  <!-- Forked components -->
  <remove-project path="system/core" name="platform/system/core" />
  <project path="system/core" name="system_core.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="system/netd" name="platform/system/netd" />
  <project path="system/netd" name="system_netd.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="system/vold" name="platform/system/vold" />
  <project path="system/vold" name="system_vold.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="system/bt" name="platform/system/bt" />
  <project path="system/bt" name="system_bt.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="external/libdrm" name="platform/external/libdrm" />
  <project path="external/libdrm" name="drm.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="frameworks/base" name="platform/frameworks/base" />
  <project path="frameworks/base" name="frameworks_base.git" groups="pdk" revision="master" remote="collabora"/>

  <remove-project path="frameworks/native" name="platform/frameworks/native" />
  <project path="frameworks/native" name="frameworks_native.git" groups="pdk" revision="master" remote="collabora"/>

  <!-- Linaro Device Configs -->
  <project path="device/linaro/generic" name="generic_device" revision="master" remote="robh" groups="default" />

  <!-- Critical drm_hwcomposer components -->
  <remove-project path="external/mesa3d" name="platform/external/mesa3d" />
  <project path="external/mesa3d" name="mesa.git" revision="master" remote="collabora" groups="default" />

  <project path="external/gbm_gralloc" name="gbm_gralloc.git" groups="pdk" revision="master" remote="collabora"/>

  <!-- Audio -->
  <project path="external/alsa-lib" name="alsa-lib.git" groups="pdk" revision="master" remote="collabora"/>
  <project path="external/alsa-plugins" name="alsa-plugins.git" groups="pdk" revision="master" remote="collabora"/>
  <project path="external/libsndfile" name="libsndfile.git" groups="pdk" revision="master" remote="collabora"/>
  <project path="external/json-c" name="json-c.git" groups="pdk" revision="master" remote="collabora"/>
  <project path="external/pulseaudio" name="pulseaudio.git" groups="pdk" revision="master" remote="collabora"/>

  <!-- Extra features -->
  <project path="external/libpciaccess" name="libpciaccess" remote="robh" revision="master" />
  <project path="external/iio-sensors-hal" name="android-iio-sensors-hal" revision="master" remote="robh" groups="default" />

</manifest>
